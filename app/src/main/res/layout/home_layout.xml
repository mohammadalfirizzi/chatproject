<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="explorer.com.bismillahprojek.ActivityLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad_bg2">
        <!--Top-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rellayout1">
            <include layout="@layout/layout_atas"/>
        </RelativeLayout>
        <!--Tengah-->
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rellayout2"
            android:layout_below="@id/rellayout1"
            android:paddingBottom="16dp"
            tools:context="explorer.com.bismillahprojek.ActivityLogin">

          <RelativeLayout
              android:layout_width="fill_parent"
              android:id="@+id/headerrrr"
              android:layout_height="80dp"
              android:orientation="vertical">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Selamat Datang"
                  android:fontFamily="sans-serif-medium"
                  android:textStyle="bold"
                  android:textAllCaps="true"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/white"
                  android:textSize="30sp"
                  android:paddingRight="1dp"/>

          </RelativeLayout>
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="200dp"
                android:layout_marginTop="75dp"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info Utama"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pengguna"
                    android:text="Nama Pengguna : "
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 D4 Teknik Telekomunikasi B "
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1210171035 "
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Politeknik Elektronika Negeri Surabaya "
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kediri Jawa Timur "
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/headerr111"
                android:layout_below="@id/headerrrr"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="40dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/logo"/>

                </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/headerr111">
                <Button
                    android:layout_marginTop="50dp"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/persegi"
                    android:text="POLITEKNIK JOSS"
                    android:textColor="@color/hitam"
                    android:textStyle="bold"/>
                <Button
                    android:layout_marginTop="50dp"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/persegi2"
                    android:text="Telekomunikasi"
                    android:textColor="@color/putih"
                    android:textStyle="bold"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/persegi2"
                    android:text="Mohammad Alfi"
                    android:textColor="@color/putih"
                    android:textStyle="bold"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/persegi"
                    android:text="Rizzi"
                    android:textColor="@color/hitam"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <!--Bawah-->

        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

